<!DOCTYPE window SYSTEM "chrome://tasktimer/locale/tasktimer.dtd">
<overlay id="tasktimer-overlay" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
   <script type="application/x-javascript" src="libs/sprintf-0.7-beta1.js"></script>
   <script type="application/x-javascript" src="libs/sqlite-1.0.0.js"></script>
   <script type="application/x-javascript" src="chrome://tasktimer/content/taskTimerCommon.js" />
   <script type="application/x-javascript" src="chrome://tasktimer/content/taskTimerTaskDB.js" />
   <script type="application/x-javascript" src="chrome://tasktimer/content/tasktimer.js" />
	
    <toolbar id="addon-bar">
        <toolbaritem id="tasktimer-box">
            <box id="tasktimer-countdownbox"> <!-- this box is necessary, because #tasktimer-countdown can blink using "visibility: hidden". Hidden elements don't recieve click events --> 
                <label id="tasktimer-countdown" value="TaskTimer" />
            </box>
                
            <toolbarbutton id="tasktimer-toolbarbutton" label="TaskTimer" type="menu" image="chrome://tasktimer/skin/icon-inactive.png" class="toolbarbutton-1 chromeclass-toolbar-additional" orient="horizontal">
                <menupopup id="tasktimer-contextMenu" position="before_end">
                    <menuitem id="tasktimer-showModeIconAndTime" label="&main.contextMenu.showIconAndTime;" name="tasktimer-viewMode" value="iconAndText" type="radio" />
                    <menuitem id="tasktimer-showModeIconOnly"    label="&main.contextMenu.showIconOnly;"    name="tasktimer-viewMode" value="iconOnly"    type="radio" />
                    <menuseparator id="tasktimer-endViewModeSeparator" />
                    <!-- list of tasks is filled in by script here -->
                    <menuseparator id="tasktimer-endTasklistSeparator" />
                    <menuitem id="tasktimer-options" label="&main.contextMenu.options;" />
                    <menuitem id="tasktimer-cancel" label="&main.contextMenu.cancel;" />
                    <menuitem id="tasktimer-quicktimer" label="&main.contextMenu.quicktimer;" />
                </menupopup>
            </toolbarbutton>
        </toolbaritem>
	</toolbar>
</overlay>

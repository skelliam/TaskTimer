<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<?xml-stylesheet href="chrome://tasktimer/skin/taskReadyDialog.css" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://tasktimer/locale/tasktimer.dtd">
<dialog title="&taskready.windowTitle;"
   xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
   buttons="accept"
   buttonlabelaccept="&taskready.buttons.ok.label;"
   ondialogaccept="window.close();">
	<script type="application/x-javascript" src="chrome://tasktimer/content/taskTimerCommon.js" />
   <script type="application/x-javascript" src="chrome://tasktimer/content/taskReadyDialog.js" />
	<box orient="vertical" id="wrapper">
	  <description value="&taskready.header;" class="header" />
	  <description id="messageline">&taskready.message;</description>
	  <description id="tasknameline">&taskready.taskname;</description>
	</box>
</dialog>
